<div class="contents row">
  <div class="content_post" style="background-image: url(<%= @info.image %>);">
    <div class="more">
      <span><%= image_tag 'arrow_top.png' %></span>
      <ul class="more_list">
        <li>
          <%= link_to '編集', edit_info_path(@info.id), method: :get %>
        </li>
        <li>
          <%= link_to '削除', info_path(@info.id), method: :delete %>
        </li>
      </ul>
    </div>
    <p><%= @info.text %></p>
    <span class="name">
      <a href="/users/<%= @info.user.id %>">
        <span>投稿者</span><%= @info.user.nickname %>
      </a>
    </span>
  </div>
</div>